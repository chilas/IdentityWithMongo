@model List<IdentityWithMongoVS2017.Data.Person>

<h2>People</h2>

<table class="table table-condensed table-striped">
    <caption><a asp-action="create">Create new person</a></caption>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Gender</td>
                <td>@person.Age</td>
            </tr>

        }
    </tbody>
</table>